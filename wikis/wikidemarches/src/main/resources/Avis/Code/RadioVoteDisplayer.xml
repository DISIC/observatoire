#end
#if ($type == 'edit')
  #set ($validationRegExp = $field.getProperty('validationRegExp').value)
  #set ($isMandatory = $validationRegExp.trim().length() &gt; 0)
  #set($discard = $xwiki.ssx.use('Avis.Code.RadioVoteDisplayer'))
  #set($theClass=$object.getxWikiClass())
  &lt;fieldset class='radiovote-form-listclass-group'&gt;
    &lt;legend role="heading" aria-level="$headingLevel"&gt;
      $doc.displayPrettyName($name, false, false)
      #if ($isMandatory)
        &lt;abbr title="$services.localization.render('wikidemarches.demarche.obligatoire')"&gt;*&lt;/abbr&gt;
      #end
    &lt;/legend&gt;
    #set($colNumber = $maxValue - $minValue + 1)
    &lt;ul class="col_${colNumber}"&gt;
    #foreach($v in [$minValue..$maxValue])
      &lt;li class='radiovote-form-listclass'&gt;
        #set($optionId = "xwiki-form-${name}-${object.number}-${velocityCount}")
        &lt;input name="${prefix}${name}" id="$optionId" type="radio" value="$v" #if($value == $v)checked="checked"#end #if ($isMandatory)aria-required="true"#end/&gt;
        &lt;label for="$optionId"&gt;$escapetool.xml($services.localization.render("${theClass.name}_${name}_${v}"))&lt;/label&gt;
      &lt;/li&gt;
    #end
    &lt;/ul&gt;
    &lt;input name="${prefix}${name}" value="" type="hidden" /&gt;
  &lt;/fieldset&gt;
#else
  $!value
#end
{{/html}}
{{/velocity}}</content>
