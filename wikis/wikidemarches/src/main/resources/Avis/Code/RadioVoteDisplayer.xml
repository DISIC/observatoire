  <content>{{velocity}}
{{html clean='false'}}
#if ("$!headingLevel" == '')
  #set($headingLevel = 2)
#end
#if ("$!minValue" == '')
  #set($minValue = 1)
#end
#if ("$!maxValue" == '')
