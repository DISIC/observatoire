  <content>{{velocity}}
{{html clean='false'}}
#if ($type == 'edit')
  #set ($validationRegExp = $field.getProperty('validationRegExp').value)
  #set ($isMandatory = $validationRegExp.trim().length() &gt; 0)
  #set ($clazz = $object.xWikiClass)
  #set ($displayType = $field.propertyClass.displayType)
  &lt;fieldset class='listclass-group'&gt;
  &lt;legend&gt;
    $doc.displayPrettyName($name, false, false)
    #if ($isMandatory)
      &lt;abbr class='asterix' title="$services.localization.render('wikidemarches.obligatoire')"&gt;*&lt;/abbr&gt;
    #end
  &lt;/legend&gt;
  &lt;ul&gt;
  #foreach($val in $field.listValues)
    &lt;li class='form-listclass-item'&gt;
      #set($optionId = "xwiki-form-${name}-${object.number}-${velocityCount}")
      &lt;label for="$optionId"&gt;&lt;input name="${prefix}${name}" id="$optionId" type="$displayType" value="$val" #if($value == $val)checked="checked"#end #if ($isMandatory)required#end/&gt;
      $escapetool.xml($services.localization.render("${clazz.name}_${name}_${val}"))&lt;/label&gt;
    &lt;/li&gt;
  #end
  #if (${clazz.name} == 'Avis.Code.AvisClass')
    #if ($name == 'difficultes')
      &lt;input id="xwiki-form-autreDifficulte-0" title="$escapetool.xml($services.localization.render("${clazz.name}_${name}_autreDifficulte"))" name='Avis.Code.AvisClass_0_autreDifficulte' value='' size='40' style='margin-left: 0.5em; display: none' /&gt;
    #elseif ($name == 'aide')
      &lt;input id="xwiki-form-autreAide-0" title="$escapetool.xml($services.localization.render("${clazz.name}_${name}_autreAide"))" name='Avis.Code.AvisClass_0_autreAide' value='' size='40' style='margin-left: 0.5em; display: none' /&gt;&lt;/label&gt;
    #end
  #end
  &lt;/ul&gt;
  &lt;input name="${prefix}${name}" value="" type="hidden" /&gt;
&lt;/fieldset&gt;
#else
  $!value
#end
{{/html}}
{{/velocity}}</content>
