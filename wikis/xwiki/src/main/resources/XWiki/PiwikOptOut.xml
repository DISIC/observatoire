  <content>{{velocity}}
## get the matomo server from the piwik app config
#set($piwikDoc = $xwiki.getDocumentAsAuthor('XWiki.PiwikConfig'))
#set($piwikServer = "$!piwikDoc.getObject('XWiki.PiwikCode').getProperty('url').value")
#set($piwikId = "$!piwikDoc.getObject('XWiki.PiwikCode').getProperty('siteid').value")
#set($discard = $xwiki.ssx.use("XWiki.PiwikOptOut"))
## display iframe only if the server and id are set, this means that the tracking is enabled.
#if ($piwikServer != '' &amp;&amp; $piwikId != '')
  #set($wikiLanguage = $xwiki.localePreference.language)
  {{html}}
    &lt;iframe class='piwikoptout' src="${piwikServer}/index.php?module=CoreAdminHome&amp;action=optOut&amp;language=${wikiLanguage}&amp;backgroundColor=ffffff&amp;fontColor=444444&amp;fontSize=1em&amp;fontFamily=Open%20Sans"&gt;&lt;/iframe&gt;
  {{/html}}
#else
  Piwik is not active.
#end
{{/velocity}}</content>
