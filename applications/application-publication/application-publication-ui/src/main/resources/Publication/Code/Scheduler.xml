    <property>
      <script>import java.util.*;
import org.xwiki.job.JobExecutor;
import org.xwiki.job.DefaultRequest;
import org.xwiki.contrib.publication.PublicationConfiguration;
import java.text.SimpleDateFormat;

def jobExecutor = services.component.componentManager.getInstance(JobExecutor.class)

def request = new DefaultRequest();
SimpleDateFormat sdf = new SimpleDateFormat("yyyyMMdd-HHmmss");
String id = sdf.format(new Date());
request.setId(Arrays.asList("publication", id));

config = new PublicationConfiguration();
config.setQuery("from doc.object(Demarches.Code.DemarchesClass) as demarche where doc.space = 'Demarches' and demarche.statut='active'");
excludeFields = "Demarches.Code.DemarchesClass:nomProjet\nDemarches.Code.DemarchesClass:niveauPrevu\nDemarches.Code.DemarchesClass:caracteristiquesDematPrevues\nDemarches.Code.DemarchesClass:statutProjetDemat\nDemarches.Code.DemarchesClass:dateMiseEnLigne\nDemarches.Code.DemarchesClass:remarques";
config.setExcludeFields(excludeFields.split("\n"));
config.setDenormalizeFields("Demarches.Code.DemarchesClass:publics\nDemarches.Code.DemarchesClass:evenements\n".split("\n"));
config.setSourceWiki("wikidemat");
config.setTargetWiki("wikidemarches");
request.setProperty("publication.configuration.key", config);

def job = jobExecutor.execute("publication", request);

</script>
